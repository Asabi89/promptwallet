{
  "name": "promptwallet",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "index.cjs",
  "author": "EverydayLLM - L'École Multimédia CDA 2025",
  "description": "A desktop application to organize and manage prompts for LLM tools",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "set NODE_ENV=development && electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "electron:build": "npm run build && electron .",
    "package": "npm run build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^7.2.4",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^39.2.7",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.12.0",
    "react-router-dom": "^7.13.0"
  },
  "build": {
    "appId": "com.everydayllm.promptwallet",
    "productName": "Prompt Wallet",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
